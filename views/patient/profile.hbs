<div class="row text-white banner clearfix">
  <div class="col-md-6 py-4 content">
    <h2 class="display-4 mb-4" style="width: 80%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-6 py-4 content">
    <h3 class="display-3">Profile</h3>
    <hr class="mb-2" />
    {{#if success_msg}}
    <div class="bg-success py-2 text-white"><p>{{success_msg}}</p></div>
    {{/if}}
    {{#if error_msg}}
    <div class="bg-danger py-2 text-white"><p>{{error_msg}}</p></div>
    {{/if}}
    <form action="/patient/profile/{{user._id}}" method="POST" encType="multipart/form-data" class="row">
      <div class="form-group col-md-6">
        <label class="d-inline-block">Matriculation Number:</label>
        <input type="text" class="d-inline-block form-control" name="matNo" value="{{user.patient_reg_no}}" disabled="disabled">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Surname:</label>
        <input type="text" class="d-inline-block form-control" name="surname" value="{{user.name.surname}}">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Other Names:</label>
        <input type="text" class="d-inline-block form-control" name="otherName" value="{{user.name.otherName}}">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Email:</label>
        <input type="email" class="d-inline-block form-control" name="email" value="{{user.email}}">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Password:</label>
        <input type="password" class="d-inline-block form-control" name="password" value="{{user.password}}">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Phone:</label>
        <input type="number" class="d-inline-block form-control" name="phone" value="{{user.phone}}">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Address:</label>
        <input type="text" class="d-inline-block form-control" name="address" value="{{user.address}}">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Photo:</label>
        <input type="file" class="d-inline-block form-control" name="photo" accept="*.jpg|*.png|*.gif" value="{{user.photo}}">
        <small class="d-block">Accepts only .jpg | .png | .gif | .jpeg image formats</small>
      </div>
      <div class="form-group">
        <img src="/uploads/{{user.photo}}" alt="" class="img-thumbnail">
      </div>
      <div class="form-group mt-2 col-md-12">
        <input type="submit" class="btn btn-info" value="Update Profile">
      </div>
    </form>
  </div>
</div>