  <div class="row text-white banner clearfix">
  <div class="col-md-8 py-4 content">
    <h2 class="display-4" style="width: 60%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-4 py-4 content">
    <h1 class="display-3">Patient Login</h1>
    <hr class="mb-2" />
    {{#if success_msg}}
    <div class="bg-success py-2 text-white"><p>{{success_msg}}</p></div>
    {{/if}}
    {{#if error_msg}}
    <div class="bg-danger py-2 text-white"><p>{{error_msg}}</p></div>
    {{/if}}
    <form action="/patient/signin" method="POST" encType="multipart/form-data">
      <div class="form-group">
        <label class="d-inline-block">Patient Registration Number:</label>
        <input type="text" class="d-block form-control" name="patient_reg_no">
      </div>
      <div class="form-group">
        <label class="d-inline-block">Password:</label>
        <input type="password" class="d-block form-control" name="password">
      </div>
      <div class="form-group mx-auto mt-2">
        <input type="submit" class="btn btn-success" value="Login">
      </div>

