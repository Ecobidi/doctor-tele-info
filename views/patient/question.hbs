<div class="row text-white banner clearfix">
  <div class="col-md-4 py-4 content">
    <h2 class="display-4" style="width: 60%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-8 py-4 content">
    <button type="button" class="btn btn-success btn-lg my-4" data-toggle="modal" data-target="#askQuestion">
      Ask Question
    </button>
    <div class="d-flex flex-wrap justify-content-start">
      {{#each questions}}
      <div class="card my-card bg-{{this.color}} mb-2 mx-2">
        <div class="card-header">
          <strong class="font-weight-bold">Question:</strong> {{this.title}}
        </div>
        <div class="card-body">
          {{#if isSolved}}
          <strong>Answer:</strong>
          <p>{{this.answer}}</p>
          {{else}}
          <p>No answer yet!</p>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  
  <!-- Modal -->
  <div class="modal fade" id="askQuestion" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content bg-warning">
        <div class="modal-header">
          <h5 class="modal-title">Ask your Question</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
          <form action="/patient/question/{{user._id}}" method="POST">
            <div class="form-group">
              <label class="mb-2">Question:</label>
              <textarea name="title" id="" cols="30" rows="4" class="form-control" placeholder="Ask your question..." required="required"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-outline-success">Send</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>