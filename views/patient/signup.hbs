<div class="row text-white banner clearfix">
  <div class="col-md-6 py-4 content">
    <h2 class="display-4 mb-4" style="width: 80%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-6 py-4 content">
    <h3 class="display-3">Patient Registration</h3>
    <hr class="mb-2" />
    {{#if success_msg}}
    <div class="bg-success py-2 text-white"><p>{{success_msg}}</p></div>
    {{/if}}
    {{#if error_msg}}
    <div class="bg-danger py-2 text-white"><p>{{error_msg}}</p></div>
    {{/if}}
    <form action="/staff/create-patient" method="POST" class="row">
      <div class="form-group col-md-6">
        <label class="d-inline-block">Patient Registration Number:</label>
        <input required type="text" class="d-inline-block form-control" name="patient_reg_no">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Surname:</label>
        <input required type="text" class="d-inline-block form-control" name="surname">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Other Names:</label>
        <input required type="text" class="d-inline-block form-control" name="otherName">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Phone:</label>
        <input required type="number" class="d-inline-block form-control" name="phone">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Address:</label>
        <input required type="text" class="d-inline-block form-control" name="address">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Blood Group:</label>
        <input type="text" class="d-inline-block form-control" name="blood_group" required>
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Gender:</label>
        <select class="d-inline-block form-control" name="gender" required>
          <option></option>
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Genotype:</label>
        <input required type="text" class="d-inline-block form-control" name="genotype">
      </div>

  
      <div class="form-group mt-2 col-md-12">
        <input type="submit" class="btn btn-info btn-block" value="Register">
      </div>
      {{!-- <div class="form-group mt-2 col-md-12">
        <div>
          <span>Already registered?</span>
          <a href="/patient/signin" type="button" class="btn btn-primary">Login Here</a>
        </div>
      </div> --}}
    </form>
  </div>
</div>