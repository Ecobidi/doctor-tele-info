<div class="row text-white banner clearfix">
  <div class="col-md-8 py-4 content">
    <h2 class="display-4" style="width: 60%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-4 py-4 content">
    <h1 class="display-3">Reset Password</h1>
    <hr class="mb-2" />
    {{#if success_msg}}
    <div class="bg-success py-2 text-white"><p>{{success_msg}}</p></div>
    {{/if}}
    {{#if error_msg}}
    <div class="bg-danger py-2 text-white"><p>{{error_msg}}</p></div>
    {{/if}}
    <form action="/staff/reset_password/{{staff_user._id}}" method="POST">
      <div class="form-group">
        <label class="d-inline-block">StaffID:</label>
        <input type="text" class="d-block form-control" required="required" name="staffId" placeholder="Enter Your StaffId...">
      </div>
      <div class="form-group">
        <label class="d-inline-block">Email:</label>
        <input type="email" class="d-block form-control" required="required" name="email" placeholder="Enter Your Email...">
      </div>
      <div class="form-group">
        <label class="d-inline-block">New Password:</label>
        <input type="password" class="d-block form-control" required="required" name="password">
      </div>
      <div class="form-group">
        <label class="d-inline-block">Retype Password:</label>
        <input type="password" class="d-block form-control" required="required" name="confirmPassword">
      </div>
      <div class="form-group mx-auto mt-2">
        <input type="submit" class="btn btn-info" value="Proceed To Reset">
      </div>
    </form>
  </div>