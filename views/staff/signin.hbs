<div class="row text-white banner clearfix">
  <div class="col-md-8 py-4 content">
    <h2 class="display-4" style="width: 60%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-4 py-4 content">
    <h1 class="display-3">Doctor Login</h1>
    <hr class="mb-2" />
    {{#if success_msg}}
    <div class="bg-success p-2 text-white"><p>{{success_msg}}</p></div>
    {{/if}}
    {{#if error_msg}}
    <div class="bg-danger p-2 text-white"><p>{{error_msg}}</p></div>
    {{/if}}
    <form action="/staff/signin" method="POST">
      <div class="form-group">
        <label class="d-inline-block">Username:</label>
        <input type="text" class="d-block form-control" required="required" name="username">
      </div>
      <div class="form-group">
        <label class="d-inline-block">Password:</label>
        <input type="password" class="d-block form-control" required="required" name="password">
      </div>
      <div class="form-group mt-2">
        <input type="submit" class="btn btn-info btn-block" value="Login">
      </div>
      <div class="form-group mx-auto mt-2 d-flex justify-content-between">
        <div class="d-inline-block"><span>Not yet a registered?</span>
        <a href="/staff/signup" type="button">Register Here</a>
        </div>
      </div>
    </form>
  </div>
</div>