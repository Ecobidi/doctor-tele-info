<div class="row text-white banner clearfix">
  <div class="col-md-6 py-4 content">
    <h2 class="display-4 mb-4" style="width: 80%;">{{appname}}</h2>
    <p class="lead my-4"><span class="pr-4">---</span>Designed By {{author}}</p>
  </div>
  <div class="col-md-6 py-4 content">
    <h3 class="display-3">Doctor Registration</h3>
    <hr class="mb-2" />
    {{#if success_msg}}
    <div class="bg-success py-2 text-white"><p>{{success_msg}}</p></div>
    {{/if}}
    {{#if error_msg}}
    <div class="bg-danger py-2 text-white"><p>{{error_msg}}</p></div>
    {{/if}}
    <form action="/staff/signup" method="POST" encType="multipart/form-data" class="row">
      <div class="form-group col-md-6">
        <label class="d-inline-block">Username:</label>
        <input type="text" class="d-inline-block form-control" required="required" name="username">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Surname:</label>
        <input type="text" class="d-inline-block form-control" required="required" name="surname">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Other Names:</label>
        <input type="text" class="d-inline-block form-control" required="required" name="otherName">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Email:</label>
        <input type="email" class="d-inline-block form-control" required="required" name="email">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Password:</label>
        <input type="password" class="d-inline-block form-control" required="required" name="password">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Confirm Password:</label>
        <input type="password" class="d-inline-block form-control" required="required" name="confirmPassword">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Mobile Phone:</label>
        <input type="number" class="d-inline-block form-control" required="required" name="phone">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Specialization:</label>
        <input type="text" class="d-inline-block form-control" required="required" name="specialization">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Current hospital:</label>
        <input type="text" class="d-inline-block form-control" required="required" name="hospital">
      </div>
      <div class="form-group col-md-6">
        <label class="d-inline-block">Office Address:</label>
        <input type="text" class="d-inline-block form-control" required="required" name="address">
      </div>
      <div class="form-group mt-2 col-md-12">
        <input type="submit" class="btn btn-info btn-block" value="Register">
      </div>
      <div class="col-md-12 mt-2">
        <div>
          <span>Already registered? </span>
          <a href="/staff/signin"> Login Here</a>
        </div>
      </div>
    </form>
  </div>
</div>